pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage("terraform init") {
            steps {
                sh 'terraform init -reconfigure'
            }
        }
        
        stage("terraform plan") {
            steps {
                sh 'terraform plan'
            }
        }
                
        stage("Terraform Action") {
    steps {
        echo "Executing Terraform action"
        sh 'terraform apply --auto-approve'
            }
        }
    }
    post {
        success {
            script {
                echo 'Deployment successful!'
            }
        }
    }
}
